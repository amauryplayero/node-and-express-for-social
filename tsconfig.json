{
    "compilerOptions": {
      "target": "es6",
      "watch": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      
      "jsx": "react-jsx",
      "rootDir": "src",
      "outDir": "./dest"
    },
    "include": [
      "src"
, "src/controller.ts", "src/index.ts"   ]
  }